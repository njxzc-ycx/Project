<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间："
                android:id="@+id/tv_onTime"
                android:textSize="15sp"/>

            <TextView
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="已上架"
                android:id="@+id/tv_status"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divide"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                app:riv_corner_radius="5dip"
                android:layout_width="130dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/defaultpic"
                android:id="@+id/iv_comImageMain" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textColor="@drawable/black"
                    android:text="xxxxxxxxxxxxxxxxxxxxxxxxxx华为手机"
                    android:id="@+id/tv_comName"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp">


                    <TextView
                        android:textSize="12sp"
                        android:textColor="@drawable/red"
                        android:text="xxx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_currentPrice"
                        />

                    <TextView
                        android:layout_marginLeft="70dp"
                        android:textSize="12sp"
                        android:text="xxx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:id="@+id/tv_collects"
                        />


                    <TextView
                        android:textSize="12sp"
                        android:text="人收藏"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/collectsText" />

                    <ImageView
                        android:layout_width="12sp"
                        android:layout_height="12sp"
                        android:layout_gravity="center"
                        android:src="@drawable/collectlogo"/>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divide"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            >

            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@drawable/withdraw"
                android:id="@+id/iv_withdrawCom"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@drawable/update"
                android:layout_marginEnd="25dp"
                android:id="@+id/iv_updateCom"
                android:layout_alignParentTop="true"
                android:visibility="gone"
                android:layout_toStartOf="@+id/iv_withdrawCom" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>