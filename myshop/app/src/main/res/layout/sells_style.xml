<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="订单号：XXXXXXXX"
                android:textColor="@drawable/black"
                android:id="@+id/tv_orderId"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/red"
                android:textSize="14sp"
                android:id="@+id/tv_status"
                android:text="待买家付款"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divide"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="5dip"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/iv_comImageMain"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                    android:textColor="@drawable/black"
                    android:textSize="16sp"
                    android:id="@+id/tv_comName"/>

                <LinearLayout
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥5.00"
                        android:textColor="@drawable/red"
                        android:id="@+id/tv_currentPrice"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/tv_totalPrice"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共1件商品，应付款：5.00元"
                        android:textColor="@drawable/black"
                        android:textSize="14sp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divide"/>

        <LinearLayout
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/tochat"/>

            <TextView
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chat"
                android:text="联系买家"
                android:textColor="@drawable/black"
                />

            <Button
                android:focusable="false"
                android:visibility="gone"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_decline"
                android:text="关闭订单"
                android:textColor="@drawable/black"
                android:background="@drawable/button_order"/>

            <Button
                android:focusable="false"
                android:visibility="gone"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_delivery"
                android:text="订单发货"
                android:textColor="@drawable/black"
                android:background="@drawable/button_order"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/black"
                android:id="@+id/tv_getTime"
                android:visibility="gone"
                android:text="收货时间：2021-5-6 50:51:11"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F2F2F2"></LinearLayout>


    </LinearLayout>

</LinearLayout>