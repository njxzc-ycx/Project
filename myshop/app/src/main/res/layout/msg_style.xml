<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/msg_all">

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="200dip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_photo"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:paddingLeft="9dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="花折人心碎"
                    android:textColor="#42A5F5"
                    android:textSize="14sp"
                    android:id="@+id/tv_nickName"/>

                <ImageView
                    android:paddingLeft="3dp"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:id="@+id/iv_sex"
                    android:src="@drawable/sex_man"/>

                <TextView
                    android:paddingLeft="8dp"
                    android:textColor="#5C6BC0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ifPublisher"

                    />
                <TextView
                    android:layout_weight="2"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/tv_msgTime"
                    android:text="刚刚"/>


            </LinearLayout>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@drawable/black"
                android:id="@+id/tv_msgDes"
                android:text="东西还在吗我要啦"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一楼"
                    android:id="@+id/tv_howmany"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="回复"
                    android:id="@+id/tv_replay"
                    android:gravity="right"/>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>