<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_how_to_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.njxzc.myshop.personal_activity.HowToRegisterActivity">

    <ImageView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_width="45px"
        android:layout_height="50px"
        android:src="@drawable/back"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="backHelpCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@drawable/black"
        android:text="如何注册新账号"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_helpcenter" />

    <ImageView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/iv_howtoregister1"
        android:src="@drawable/howtoregister1"
        android:layout_below="@+id/tv_helpcenter"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/iv_howtoregister2"
        android:src="@drawable/howtoregister2"
        android:layout_below="@+id/iv_howtoregister1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
