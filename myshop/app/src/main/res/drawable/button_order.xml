<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         与顺序有关。最外层一定要放在最前面。最里层放在里面，
         不然会被遮挡。也与item中设置的值大小有关系
-->
    <!-- 最外层 -->
    <item>
        <shape>
            <corners android:radius="105dp"></corners>
            <solid android:color="@color/gray_normal" />
        </shape>
    </item>

    <!-- 中间层 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <corners android:radius="105dp"></corners>
            <solid android:color="#ffffff" />
        </shape>
    </item>

</layer-list>