<?xml version="1.0" encoding="utf-8" ?>
    <!--相当于做了一张圆角的图片,然后给button作为背景图片-->
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <!--设置背景色-->
        <solid android:color="#E9E9E9" />
        <!--设置圆角-->
        <corners android:radius="120dip" />
        <padding
            android:left="12dp"
            android:bottom="8dp"
            android:right="63dp"
            android:top="8dp"
            />
        <!--设置边框线的宽度和颜色-->

    </shape>
